<!DOCTYPE html>
<html>
  <head>
    <title>Daftar Barang</title>
    <link rel="stylesheet" href="/public/css/style.css" />
  </head>
  <style>
    * {
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      list-style: none;
      text-decoration: none;
      border-radius: 7px;
    }
    body {
      margin: auto;
      width: 60%;
    }
    a {
      display: block;
      padding: 1vh 2vw;
      background: black;
      color: white;
      transition: 0.2s;
      width: max-content;
    }
    a:hover {
      box-shadow: 2px 2px 10px gray;
      background: white;
      color: black;
    }
    table {
      box-shadow: 2px 2px 20px rgb(182, 182, 182);
      text-align: center;
      padding: 2vh;
    }
    button {
      box-shadow: 2px 2px 10px rgb(158, 158, 158);
      padding: 1vh;
      cursor: pointer;
      border: none;
      background: none;
    }
    .container {
      display: grid;
      gap: 3vh;
    }
    #aksi {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 0 1vw;
    }
    th {
      background: black;
      color: white;
      padding: 1vh 0;
    }
    #hapus:hover {
      background: red;
      color: white;
    }
  </style>
  <body>
    <div class="container">
      <h1>Daftar Barang</h1>
      <a href="/">Tambah Barang</a>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Nama Barang</th>
            <th>Harga</th>
            <th>Stok</th>
            <th>Kategori</th>
          </tr>
        </thead>
        <tbody>
          <% barangs.forEach(barang => { %>
          <tr>
            <td><%= barang.id %></td>
            <td><%= barang.nama %></td>
            <td><%= barang.harga %></td>
            <td><%= barang.stok %></td>
            <td><%= barang.category %></td>
            <td id="aksi">
              <a href="/edit/<%= barang.id %>">Edit</a>
              <form
                action="/delete/<%= barang.id %>"
                method="POST"
                style="display: inline"
              >
                <button id="hapus" type="submit">Hapus</button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
